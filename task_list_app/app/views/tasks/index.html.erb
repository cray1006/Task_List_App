<p id="notice"><%= notice %></p>
<div id = "primary">
<h1>Listing Tasks</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Priority</th>
      <th>Due Date</th>
      <th>Is Completed</th>
	  <th>List</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.Title %></td>
        <td><%= task.Description %></td>
        <td><%= task.Priority %></td>
        <td><%= task.DueDate %></td>
        <td><%= task.IsCompleted %></td>
		<td><%= task.task_list.Name if task.task_list%></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
</div>


