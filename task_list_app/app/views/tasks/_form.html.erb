<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Title %><br>
    <%= f.text_field :Title %>
  </div><br>
  <div class="field">
    <%= f.label :Description %><br>
    <%= f.text_area :Description %><br>
  </div><br>
  <div class="field">
    <%= f.label :Priority %><br>
    <%= f.number_field :Priority %>
  </div><br>
  <div class="field">
    <%= f.label :DueDate %><br>
    <%= f.date_select :DueDate %>
  </div><br>
  <div class="field">
    <%= f.label :IsCompleted %><br>
    <%= f.check_box :IsCompleted %>
  </div><br>
  <div class="field">
    <%= f.label :task_list_id %><br>
    <%= f.collection_select :task_list_id, TaskList.all, :id, :Name, prompt: true%>
  </div><br>
  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.collection_select :user_id, User.all, :id, :username, {:prompt => 'No users assigned'}%>
  </div><br>
  <div class="actions">
    <%= f.submit %>
  </div><br>
<% end %>
