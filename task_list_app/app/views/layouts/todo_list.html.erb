<!DOCTYPE html>
<html>
<head>
  <title>Task List App</title>
  <%= stylesheet_link_tag    'site', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<header>
		<h1>Task List App</h1>
	</header>
	
	<div id = "sidebar">
		<h2>Task Lists</h2>
		<ul>
			<% @all_task_lists.each do |task_list| %>
			<li><%= link_to "#{task_list.Name}", task_list %></li>
			<% end %>
		</ul>
		<p><%= link_to 'New Task List', new_task_list_path %><br>
		<%= link_to "Task Lists", task_lists_path%></p>
		
		<p><%= link_to 'New Task', new_task_path %><br>
		<%= link_to "Tasks", tasks_path%></p>
	</div>
	
	<div id="primary">
	  <% if flash[:message] %>
	    <p class="flash-message"><%= flash[:message] %></p>
	  <% end %>
	  <%= yield %>
	</div>
	
	<footer>
		<%= link_to 'Home', home_path%>
		<% if session[:user_id] %>
		<%= link_to 'Logout', logout_path %>
		<% else %>
		<%= link_to 'Login', login_path %>
		<% end %><br>
		copyright 2015 | Christopher Ray (for MGTI40660)
	</footer>
	
</body>
</html>